<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:clickable="true"
                style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                android:onClick="back"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Session"
                android:textColor="@color/textPrimaryInverted"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <!--<TextView-->
    <!--android:text="0900"-->
    <!--android:textSize="28sp"-->
    <!--android:textStyle="bold"-->
    <!--android:layout_marginTop="12dp"-->
    <!--android:layout_marginBottom="4dp"-->
    <!--android:layout_marginLeft="12dp"-->
    <!--android:layout_marginEnd="12dp"-->
    <!--android:layout_marginStart="12dp"-->
    <!--android:layout_marginRight="12dp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="The ultimate guide to MVP pattern on Android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/schedules_times"
                android:text="0900"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/textPrimary"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:drawableStart="@drawable/ic_timer_black_24dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/languageAndComplexityTextView"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textSecondary"
                android:text="English / Intermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp"
                android:textSize="14sp"
                android:textColor="@color/textPrimary"
                android:text="English / Intermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tagsTextView"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_local_offer_black_24dp"
                android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp"
                android:text="Android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/presentationAvailableTextView"
                android:textColor="@color/textPrimary"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_airplay_black_24dp"
                android:drawableLeft="@drawable/ic_airplay_black_24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp"
                android:text="Presentation Available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/bottomBg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="8dp"
                    android:id="@+id/person"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/speakerNameTextView"
                    android:layout_toRightOf="@id/person"
                    android:layout_toEndOf="@id/person"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimaryInverted"
                    android:textStyle="bold"
                    android:text="Kudzai Chasinda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_below="@id/speakerNameTextView"
                    android:layout_toRightOf="@id/person"
                    android:layout_toEndOf="@id/person"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#efefef"
                    android:text="GDG, Harare, Zimbabwe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>