<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/profilePictureImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/image_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="Gaborone, Botswana"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimaryInverted"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/speakerNameTextView"
                    android:layout_above="@id/locationTextView"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="2dp"
                    android:text="Daniel Dube"
                    android:textSize="18sp"
                    android:textColor="@color/textPrimaryInverted"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:text="Skills:"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textColor="@color/textPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <pl.charmas.android.tagview.TagView
                android:orientation="vertical"
                style="@style/Widget.TagView"
                android:id="@+id/tagsTextView"
                app:tagUppercase="false"
                app:tagCornerRadius="3dp"
                app:tagPadding="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/tag_background"
                android:text="Design Patterns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bioTextView"
                android:autoLink="all"
                android:textColor="@color/textPrimary"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:text="Daniel is the Developer Ecosystem Program Manager for Sub-Saharan Africa Google Developer communities. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="#e6e6e6"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:paddingRight="12dp"
                android:paddingEnd="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:id="@+id/twitter"
                    app:srcCompat="@drawable/ic_twitter"
                    android:padding="19dp"
                    android:layout_gravity="end"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <ImageView
                    android:visibility="gone"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:id="@+id/linked_in"
                    app:srcCompat="@drawable/linked_in"
                    android:padding="19dp"
                    android:layout_gravity="end"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <ImageView
                    android:visibility="gone"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:id="@+id/gplus"
                    app:srcCompat="@drawable/ic_plus_one_black_24dp"
                    android:padding="14dp"
                    android:layout_gravity="end"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>